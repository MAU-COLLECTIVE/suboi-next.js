{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "elements/*": ["app/components/elements/*"],
      "layouts/*": ["app/components/layouts/*"],
      "modules/*": ["app/components/modules/*"],
      "templates/*": ["app/components/templates/*"],
      "constant/*": ["app/constants/*"],
      "context/*": ["app/context/*"],
      "hook/*": ["app/hooks/*"],
      "util/*": ["app/utils/*"],
      "public/*": ["public/*"],
      "styles/*": ["app/styles/*"],
      "api/*": ["app/api/*"]
    }
  }
}