{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:react/recommended"
    ], 
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },  
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["app"],
                "extensions": [".js", ".jsx"]
            }
        }
    }
}  